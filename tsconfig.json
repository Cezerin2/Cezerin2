{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "build",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "noEmitOnError": false,
    "removeComments": true,
    "jsx": "react"
  },
  "compileOnSave": true,
  "include": ["src"]
}
