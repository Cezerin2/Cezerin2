{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "noEmitOnError": false,
    "removeComments": true,
    "jsx": "react",
    "allowJs": false
  },
  "compileOnSave": true,
  "exclude": ["config"],
  "include": ["src"]
}
